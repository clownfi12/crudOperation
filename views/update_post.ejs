<h1>Student Page</h1>

<form method="post" action="/post/EditPostData" enctype="multipart/form-data">
    <input type="hidden" name="EditPostId" value="<%= singlePost.id %>" />
    <table border="1" >
        <tr>
            <td>Enter Title</td>
            <td><input type="text" name="title" value="<%= singlePost.title %>"/></td>
        </tr>
        <tr>
            <td>Enter Content</td>
            <td><textarea name="content"><%= singlePost.content %></textarea></td>
        </tr>
         <tr>
            <td>Upload Image</td>
            <td><input type="file" name="postImage" />
                <img src="<%= singlePost.postImage %>" height="100" /></td>
        </tr>
         <tr>
            <td></td>
            <td><input type="submit"  value="Edit Post" /></td>
        </tr>
    </table>
</form>