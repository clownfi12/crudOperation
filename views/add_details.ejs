

<a href="/view_details">View Details</a>
<h1>Student Page Details</h1>

<form method="post" action="/addStudentDetails" enctype="multipart/form-data">
    <table border="1" >
        <tr>
            <td>Enter Name</td>
            <td><input type="text" name="name" /></td>
        </tr>
        <tr>
            <td>Enter Age</td>
            <td><input type="text" name="age" /></td>
        </tr>

        <form>

        </form>


        <tr>
            <td>Select gender</td>
            <td>
                <input type="radio" name="gender"  value="male"/>male
                <input type="radio" name="gender"  value="female"/>female
            </td>
        </tr>


        <tr>
            <td>Select Hobby</td>
            <td>
                <input type="checkbox" name="hobby"  value="Reading"/>Reading
                <input type="checkbox" name="hobby"  value="Music"/>Music
                <input type="checkbox" name="hobby"  value="Adventure"/>Adventure
            </td>
        </tr>

        <% var city = ["Surat","Rajkot","Vadodara","Ahmedabad","Navsari"]%>
        <tr>
            <td>Select City</td>
            <td>
                <select name="city">
                    <option value="">--select City--</option>
                    <% city.map((v)=>{ %>
                        <option value="<%= v %>"><%= v %></option>

                    <% }) %>
                </select>
            </td>
        </tr>

        <tr>
            <td>Upload Image</td>
            <td><input type="file" name="adminImage" /></td>
        </tr>





        <tr>
            <td></td>
            <td><input type="submit" name="submit" value="Add Record" /></td>
        </tr>
    </table>
</form>