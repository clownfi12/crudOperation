<a href="/post">Add Post</a>


<table border="1">
    <tr>
        <td>Title</td>
        <td>Content</td>
        <td>Image</td>
        <td>Actions</td>
    </tr>

    <% for(var pd of allPost) { %>
        <tr>
            <td><%= pd.title %></td>
            <td><%= pd.content %></td>
            <td><img src="<%= pd.postImage %>" height="100" /></td>
            <td><a href="/post/deletePost/<%= pd.id %>">Delete</a> ||
                <a href="/post/updatePost/<%= pd.id %>">Update</a></td>
        </tr>

    <% } %>
 
</table>